{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["dom", "es2017"],
    "paths": {
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "services/*": ["services/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "hooks/*": ["hooks/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "exclude": [
    "dist",
    "out",
    "node_modules",
    "postcss.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "coverage"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
